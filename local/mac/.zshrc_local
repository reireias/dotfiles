export GOROOT=/usr/local/opt/go/libexec

# rbenv
eval "$(rbenv init -)"

# alias for mac
alias g='ggrep --color=always'
alias grep='ggrep --color=always'
alias jgrep='ggrep --include="*.java"'
alias jsgrep='ggrep --include="*.js"'
alias fgrep='find ./ | ggrep'
alias ngrep='ggrep --exclude-dir={node_modules,.nuxt}'
alias sed='gsed'
alias top='htop'
alias c='pbcopy'

alias tweet='~/scripts/kotoriotoko/BIN/tweet.sh'
alias tl='~/scripts/kotoriotoko/BIN/twtl.sh'

unalias open
alias chrome='open -a /Applications/Google\ Chrome.app'

alias dewb="docker-compose exec web bash"
alias drspec="docker exec -it medpeer-dev_web_1 /usr/local/rbenv/shims/ruby bin/rspec "
alias cdrspec="docker exec -it containerize-dev_web_1 /usr/local/bin/ruby bin/rspec "

function pr-open {
    local url=$(hub pr list -h $(git symbolic-ref --short HEAD) -f "%U")
    if [ -z "$url" ]; then
        echo "The PR based this branch not found."
        return 1
    fi
    open $url
}

export PATH="$HOME/dev/src/github.medpeer.co.jp/medpeer-inc/medpeer-toolbox/bin:$PATH"

